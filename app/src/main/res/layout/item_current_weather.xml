<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="forecast"
            type="com.mihailenko.ilya.weatherforecastapp.data.item.ForecastDayItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/current_weather_icon"
            android:layout_width="240dp"
            android:layout_height="200dp"
            app:imageUrl="@{forecast.iconUrl}"
            tools:src="@drawable/ic_umbrella" />

        <TextView
            android:id="@+id/weather_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{String.format("Conditions: %s", forecast.conditions)}'
            tools:text="Cloudly" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/low_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text='@{String.format("Min: %s\u2103", forecast.lowTemperature)}'
                tools:text="from 18 C" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/high_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text='@{String.format("Max: %s\u2103", forecast.highTemperature)}'
                tools:text="to 25 C" />
        </LinearLayout>

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{String.format("Humidity: %s%%", forecast.humidity)}'
            tools:text="humidity 87 %" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{String.format("Ave wind speed: %s kph", forecast.windSpeed)}'
            tools:text="average wind 23" />
    </LinearLayout>
</layout>